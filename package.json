{
  "name": "itypescriptor",
  "version": "1.0.0",
  "description": "A beautiful TypeScript/JavaScript editor and executor with glassmorphism design",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "package": "electron-builder"
  },
  "keywords": [
    "typescript",
    "javascript",
    "editor",
    "electron",
    "code-editor"
  ],
  "author": "iTypeScriptor",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.8.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "esbuild": "^0.19.4",
    "monaco-editor": "^0.44.0"
  },
  "build": {
    "appId": "com.itypescriptor.app",
    "productName": "iTypeScriptor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    }
  }
}

